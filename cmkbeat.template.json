{
  "mappings": {
    "_default_": {
      "_all": {
        "enabled": false
      },
      "dynamic_templates": [
        {
          "str_to_kw": {
            "mapping": {
              "ignore_above": 1024,
              "type": "keyword",
			  "norms": false
            },
            "match_mapping_type": "string"
          }
		},
		{
		  "perfdata_as_num": {
			"mapping": {
				"type": "float"
			},
			"path_match": "[metrics][*][*][*]"
		  }
        }
      ],
	  "numeric_detection": true,
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "beat": {
          "properties": {
            "hostname": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "name": {
              "ignore_above": 1024,
              "type": "keyword"
            }
          }
        },
        "host_name": {
          "norms": false,
          "type": "keyword"
        },
		"host_alias": {
          "norms": false,
          "type": "keyword"
        },
        "display_name": {
          "norms": false,
          "type": "keyword"
        },
        "check_command": {
          "norms": false,
          "type": "text"
        },
        "state": {
          "type": "short"
        },
		"acknowledged": {
          "norms": false,
          "type": "boolean"
        },
        "plugin_output": {
          "norms": false,
          "type": "text"
        },
		"long_plugin_output": {
          "norms": false,
          "type": "text"
        },
		"percent_state_change": {
          "norms": false,
          "type": "float"
        },
        "perf_data": {
          "norms": false,
          "type": "text"
        },
        "tags": {
          "ignore_above": 1024,
          "type": "keyword"
        },
		"metrics": {
			"type": "nested"
		}
      }
    }
  },
  "order": 0,
  "settings": {
    "index.refresh_interval": "5s",
	"index.mapping.coerce": true,
	"index.mapping.ignore_malformed": true
  },
  "template": "cmkbeat-*"
}